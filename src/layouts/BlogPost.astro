---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import Comments from '../components/Comments.astro';
import LikeButton from '../components/LikeButton.astro';

// Props型を拡張：showComments（任意）を追加
type Props = CollectionEntry<'blog'>['data'] & {
	showComments?: boolean;
};

// showComments のデフォルト値を true に設定
const { title, description, pubDate, updatedDate, heroImage, showComments = true } = Astro.props;

const url = Astro.url.href;
const id = Astro.url.pathname;
---

<html lang="ja"> 
	<head>
		<BaseHead title={title} description={description} />
		<style is:global>
			/* ▼▼▼ 流体タイポグラフィ設定 ▼▼▼ */
			:root {
				font-size: clamp(15px, 0.4vw + 13.5px, 18px);
				--accent-blue: #0071e3;
			}

			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}

			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
				font-size: 1rem;
				line-height: 1.8;
			}

			/* ▼▼▼ タイトルエリアの隙間を圧縮（維持） ▼▼▼ */
			.title {
				margin-bottom: 0.5em;
				padding: 0.5em 0 0 0;
				text-align: center;
				line-height: 1.2;
			}
			.title h1 {
				margin: 0 0 0.2em 0;
				font-size: 2.8rem;
				font-weight: 900;
				color: #2d3436;
			}

			/* いいねボタンのコンテナ隙間調整 */
			.like-button-wrapper {
				display: flex;
				justify-content: center;
				margin: 0.2rem 0;
			}

			/* LikeButton内部のマージンを外部から上書きして強制的に詰める */
			.like-button-wrapper :global(.like-container) {
				margin: 0 !important; 
				gap: 4px !important;
			}

			/* タイトル下の区切り線の余白を調整 */
			.title hr {
				margin: 0.5rem auto 1.5rem;
				border: 0;
				border-top: 1px solid #eee;
			}

			.prose h2 {
				font-size: 1.8rem;
				margin: 2rem 0 0.8rem;
			}
			.prose h3 {
				font-size: 1.6rem;
				margin: 1.5rem 0 0.8rem;
			}

			.date {
				margin-bottom: 0.3em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
			
			.comment-divider {
				border: 0;
				border-top: 1px solid #eee;
				margin: 3rem 0 2rem;
			}

			/* シェアボタンのデザイン（グラスモフィズム） */
			.share-trigger {
				position: fixed;
				bottom: 2rem;
				right: 2rem;
				background: rgba(255, 255, 255, 0.8);
				backdrop-filter: blur(12px);
				-webkit-backdrop-filter: blur(12px);
				color: #1d1d1f;
				border: 1px solid rgba(0, 0, 0, 0.1);
				padding: 0.8rem 1.4rem;
				border-radius: 99px;
				font-weight: 600;
				display: flex;
				align-items: center;
				gap: 0.6rem;
				cursor: pointer;
				box-shadow: 0 10px 30px rgba(0,0,0,0.08);
				z-index: 100;
				transition: transform 0.4s cubic-bezier(0.15, 0, 0.15, 1), background 0.3s ease, border-color 0.3s ease;
			}

			/* 下スクロール時に隠れるスタイル */
			.share-trigger.hidden {
				transform: translateY(150%) scale(0.8);
				pointer-events: none;
			}

			.share-trigger:hover {
				border-color: var(--accent-blue);
				background: rgba(255, 255, 255, 0.9);
				transform: scale(1.05) translateY(-5px);
			}

			.share-trigger svg {
				color: var(--accent-blue);
			}

			@media (max-width: 768px) {
				.title h1 {
					font-size: 2rem;
					line-height: 1.3;
					padding: 0 0.2rem;
				}
				.prose {
					padding: 0.5em;
				}
				.share-trigger {
					bottom: 1.5rem;
					right: 1.5rem;
					padding: 0.7rem 1.2rem;
					font-size: 0.85rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article data-pagefind-body>
				<div class="hero-image">
					{heroImage && <Image width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>

						<div class="like-button-wrapper">
							<LikeButton slug={id} />
						</div>

						<hr />
					</div>
					<slot />
				</div>
			</article>

			{showComments && (
				<div class="prose">
					<hr class="comment-divider" />
					<section>
						<h3 style="margin-bottom: 1.5rem;">Comments</h3>
						<Comments title={title} id={id} url={url} />
					</section>
				</div>
			)}
		</main>

		<button id="scroll-share-btn" class="share-trigger" onclick="sharePage()">
			<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"/><polyline points="16 6 12 2 8 6"/><line x1="12" y1="2" x2="12" y2="15"/></svg>
			<span>Share this Post</span>
		</button>

		<Footer />

		<script is:inline>
			// シェア機能
			function sharePage() {
				const title = document.title;
				const text = `${title} |\n0と1の世界を研ぎ澄まし、色彩豊かな人生を刻む。`;

				if (navigator.share) {
					navigator.share({
						title: title,
						text: text,
						url: window.location.href,
					});
				} else {
					navigator.clipboard.writeText(window.location.href);
					alert("リンクをコピーしました。シェアありがとうございます！");
				}
			}

			// スクロール検知によるボタンの出現・消失ロジック
			let lastScrollY = window.scrollY;
			const shareBtn = document.getElementById('scroll-share-btn');

			window.addEventListener('scroll', () => {
				const currentScrollY = window.scrollY;

				if (currentScrollY > lastScrollY && currentScrollY > 200) {
					// 下スクロール時：隠す
					shareBtn.classList.add('hidden');
				} else {
					// 上スクロール時：表示
					shareBtn.classList.remove('hidden');
				}
				lastScrollY = currentScrollY;
			}, { passive: true });
		</script>
	</body>
</html>