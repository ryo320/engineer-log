---
/* src/components/Comments.astro */
const { title, id, url } = Astro.props;
---

<div class="comments-wrapper">
  <div class="bg-glow"></div>
  
  <div class="comments-card">
    <div class="neon-bar"></div>

    <div class="comments-content">
      <div class="comments-header">
        <div class="visual-box">
          <div class="icon-ring"></div>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="header-svg"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path></svg>
        </div>
        <div class="header-title-group">
          <h3>Join the Discussion</h3>
          <p>技術的な議論や旅の感想をお待ちしています</p>
        </div>
      </div>

      <div id="cusdis_thread"
        data-host="https://cusdis.com"
        data-app-id="de7cac4e-cb61-4ad2-b7c1-11bab18a1fd1"
        data-page-id={id}
        data-page-url={url}
        data-page-title={title}
        data-theme="auto"
        data-lang="ja"
      ></div>
    </div>
  </div>
</div>

<script async defer src="https://cusdis.com/js/cusdis.es.js"></script>

<style is:global>
  :root {
    --theme-blue: #0984e3;
    --theme-purple: #6c5ce7;
    --card-bg: #ffffff;
  }

  .comments-wrapper {
    position: relative;
    margin: 1rem auto 4rem;
    max-width: 850px;
    width: 95%;
  }

  .bg-glow {
    position: absolute;
    top: -20px;
    left: 10%;
    right: 10%;
    height: 100px;
    background: var(--theme-blue);
    filter: blur(80px);
    opacity: 0.08;
    z-index: 0;
  }

  .comments-card {
    position: relative;
    z-index: 1;
    background: var(--card-bg);
    border-radius: 24px;
    border: 1px solid rgba(9, 132, 227, 0.12);
    box-shadow: 0 10px 40px -10px rgba(0, 0, 0, 0.05);
    overflow: hidden;
  }

  .neon-bar {
    height: 5px;
    background: linear-gradient(90deg, var(--theme-blue), var(--theme-purple), var(--theme-blue));
    background-size: 200% auto;
    animation: gradientShift 5s linear infinite;
  }

  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
  }

  .comments-content {
    padding: 3.5rem 3rem;
  }

  @media (max-width: 768px) {
    .comments-content {
      padding: 2rem 1.2rem; 
    }
  }

  /* ▼ 修正点：アイコンとテキストを常に横並びにする ▼ */
  .comments-header {
    display: flex;
    align-items: center; /* 垂直方向の中央揃え */
    gap: 1.2rem;
    margin-bottom: 2.5rem;
  }

  @media (max-width: 768px) {
    .comments-header {
      gap: 1rem; /* スマホでは間隔を少しだけ詰める */
      margin-bottom: 1.8rem;
      /* スマホでも flex-direction: column にせず横並びを維持 */
    }
  }

  .visual-box {
    position: relative;
    width: 54px;
    height: 54px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .icon-ring {
    position: absolute;
    inset: 0;
    border-radius: 16px;
    background: linear-gradient(135deg, rgba(9, 132, 227, 0.15) 0%, rgba(108, 92, 231, 0.05) 100%);
    border: 1px solid rgba(9, 132, 227, 0.2);
  }

  .header-svg {
    position: relative;
    color: var(--theme-blue);
    width: 22px;
    height: 22px;
  }

  /* ▼ 修正点：文字サイズをさらに一段階大きく拡大 ▼ */
  .header-title-group h3 {
    margin: 0;
    font-size: 1.6rem; /* 1.6remからさらに拡大 */
    font-weight: 900;
    color: #1a1a1a;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  @media (max-width: 768px) {
    .header-title-group h3 {
      font-size: 1.5rem; /* スマホでも見出しとして十分なサイズを確保 */
    }
  }

  .header-title-group p {
    margin: 0.1rem 0 0;
    font-size: 0.95rem;
    color: #636e72;
    font-weight: 500;
  }

  #cusdis_thread {
    min-height: 650px; 
    width: 100%;
  }

  #cusdis_thread iframe {
    min-height: 650px !important;
  }
</style>