---
/* src/components/Comments.astro */
const { title, id, url } = Astro.props;
---

<div class="comments-wrapper">
  <div class="bg-glow"></div>
  
  <div class="comments-card">
    <div class="neon-bar"></div>

    <div class="comments-content">
      <div class="comments-header">
        <div class="visual-box">
          <div class="icon-ring"></div>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="header-svg"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path></svg>
        </div>
        <div class="header-title-group">
          <h3>Join the Discussion</h3>
          <p>研究へのフィードバックや、旅の感想もお待ちしています</p>
        </div>
      </div>

      <div id="cusdis_thread"
        data-host="https://cusdis.com"
        data-app-id="de7cac4e-cb61-4ad2-b7c1-11bab18a1fd1"
        data-page-id={id}
        data-page-url={url}
        data-page-title={title}
        data-theme="auto"
        data-lang="ja"
      ></div>
    </div>
  </div>
</div>

<script async defer src="https://cusdis.com/js/cusdis.es.js"></script>

<style is:global>
  :root {
    --theme-blue: #0984e3;
    --theme-purple: #6c5ce7;
    --card-bg: #ffffff;
  }

  /* 外枠のレスポンシブ対応 */
  .comments-wrapper {
    position: relative;
    margin: 6rem auto 4rem;
    max-width: 850px;
    width: calc(100% - 2rem); /* スマホで画面端にピッタリくっつかないように調整 */
  }

  .bg-glow {
    position: absolute;
    top: -20px;
    left: 10%;
    right: 10%;
    height: 100px;
    background: var(--theme-blue);
    filter: blur(80px);
    opacity: 0.08;
    z-index: 0;
  }

  .comments-card {
    position: relative;
    z-index: 1;
    background: var(--card-bg);
    border-radius: 28px;
    border: 1px solid rgba(9, 132, 227, 0.12);
    box-shadow: 0 10px 40px -10px rgba(0, 0, 0, 0.05);
    overflow: hidden;
  }

  .neon-bar {
    height: 5px;
    background: linear-gradient(90deg, var(--theme-blue), var(--theme-purple), var(--theme-blue));
    background-size: 200% auto;
    animation: gradientShift 5s linear infinite;
  }

  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
  }

  /* 【スマホ対応：パディングの調整】 */
  .comments-content {
    padding: 4rem 3.5rem;
  }
  @media (max-width: 768px) {
    .comments-content {
      padding: 2.5rem 1.5rem; /* スマホでは余白を狭くする */
    }
  }

  /* 【スマホ対応：ヘッダーの調整】 */
  .comments-header {
    display: flex;
    align-items: flex-start;
    gap: 1.8rem;
    margin-bottom: 4rem;
  }
  @media (max-width: 768px) {
    .comments-header {
      flex-direction: column; /* スマホではアイコンと文字を縦に並べる */
      gap: 1rem;
      margin-bottom: 2.5rem;
    }
  }

  .visual-box {
    position: relative;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .icon-ring {
    position: absolute;
    inset: 0;
    border-radius: 18px;
    background: linear-gradient(135deg, rgba(9, 132, 227, 0.15) 0%, rgba(108, 92, 231, 0.05) 100%);
    border: 1px solid rgba(9, 132, 227, 0.2);
  }

  .header-svg {
    position: relative;
    color: var(--theme-blue);
  }

  /* 【スマホ対応：文字サイズの調整】 */
  .header-title-group h3 {
    margin: 0;
    font-size: 1.8rem;
    font-weight: 900;
    color: #1a1a1a;
    letter-spacing: -0.04em;
  }
  @media (max-width: 768px) {
    .header-title-group h3 {
      font-size: 1.4rem; /* スマホではタイトルを少し小さく */
    }
  }

  /* 高さの確保 */
  #cusdis_thread {
    min-height: 650px; 
    width: 100%;
  }

  #cusdis_thread iframe {
    min-height: 650px !important;
  }
</style>