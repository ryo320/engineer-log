---
/* src/components/Comments.astro */
const { title, id, url } = Astro.props;
---

<div class="comments-container">
  <div class="blue-accent-line"></div>

  <div class="comments-inner">
    <div class="comments-header">
      <div class="header-visual">
        <div class="icon-blob">
          <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path></svg>
        </div>
      </div>
      <div class="header-text">
        <h3>Join the Discussion</h3>
        <p>感想やコメントをお待ちしています</p>
      </div>
    </div>

    <div id="cusdis_thread"
      data-host="https://cusdis.com"
      data-app-id="de7cac4e-cb61-4ad2-b7c1-11bab18a1fd1"
      data-page-id={id}
      data-page-url={url}
      data-page-title={title}
      data-theme="auto"
      data-lang="ja"
    ></div>
  </div>
</div>

<script async defer src="https://cusdis.com/js/cusdis.es.js"></script>

<style is:global>
  .comments-container {
    margin: 6rem auto 4rem;
    position: relative;
    background: #ffffff;
    border-radius: 24px;
    overflow: hidden;
    border: 1px solid rgba(9, 132, 227, 0.1);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.04);
    transition: transform 0.3s ease;
    max-width: 850px; /* 横幅を少し広げて、入力欄を横長に使いやすくする */
  }

  .blue-accent-line {
    height: 6px;
    background: linear-gradient(90deg, #0984e3, #6c5ce7);
    width: 100%;
  }

  .comments-inner {
    padding: 3.5rem 3rem; /* 上下のパディングを増やしてゆとりを持たせる */
  }

  .comments-header {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 3.5rem; /* 入力フォームとの間隔を広げる */
  }

  .icon-blob {
    background: linear-gradient(135deg, rgba(9, 132, 227, 0.1) 0%, rgba(108, 92, 231, 0.1) 100%);
    color: #0984e3;
    width: 52px;
    height: 52px;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: inset 0 0 0 1px rgba(9, 132, 227, 0.2);
  }

  .header-text h3 {
    margin: 0;
    font-size: 1.6rem;
    font-weight: 900;
    color: #2d3436;
    letter-spacing: -0.03em;
  }

  .header-text p {
    margin: 0.3rem 0 0;
    font-size: 0.95rem;
    color: #636e72;
  }

  /* 【修正の肝】
     min-heightを大きく（550px〜）確保することで、
     ニックネーム・メール・コメント欄が重ならずに一気に表示されます。
  */
  #cusdis_thread {
    min-height: 550px; 
    width: 100%;
  }

  #cusdis_thread iframe {
    height: 100% !important;
    min-height: 550px !important;
  }

  .comments-container:hover {
    box-shadow: 0 25px 50px rgba(9, 132, 227, 0.08);
  }
</style>