---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, CATEGORIES } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { Image } from 'astro:assets';
import Search from '../../components/Search.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;

let likesData = [];
try {
  const res = await fetch(`${supabaseUrl}/rest/v1/post_likes?select=slug,count`, {
    headers: { 'apikey': supabaseKey, 'Authorization': `Bearer ${supabaseKey}` }
  });
  likesData = await res.json();
} catch (e) {
  console.error("Supabaseデータの取得失敗:", e);
}

const postsWithLikes = posts.map(post => {
  const match = likesData.find(l => l.slug === `/blog/${post.id}/`);
  return { ...post, likeCount: match ? match.count : 0 };
});
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={`Blog | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			:root {
				--accent: #0984e3;
				--accent-gradient: linear-gradient(135deg, #0984e3, #6c5ce7);
				--text-main: #1d1d1f;
				--text-sub: #86868b;
				--ui-bg: #f5f5f7;
				--card-border: #f0f0f0;
			}
			main {
				width: 960px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 2em 1em;
			}

			.blog-dashboard {
				background: #ffffff;
				border: 1px solid rgba(0, 0, 0, 0.05);
				border-radius: 24px;
				padding: 2rem;
				margin-bottom: 4rem;
				box-shadow: 0 2px 15px rgba(0, 0, 0, 0.02);
			}

			.category-nav { display: flex; flex-wrap: wrap; gap: 0.8rem; justify-content: center; margin-bottom: 1.5rem; }
			.cat-link {
				text-decoration: none; padding: 0.5rem 1.2rem; border-radius: 50px; font-size: 0.9rem;
				font-weight: 600; color: var(--text-sub); background: var(--ui-bg); transition: all 0.2s ease;
			}
			.cat-link.active { background: var(--accent-gradient); color: white; box-shadow: 0 4px 12px rgba(9, 132, 227, 0.2); }

			.search-container { max-width: 500px; margin: 0 auto 2rem; }
			.sort-section { display: flex; justify-content: center; align-items: center; gap: 1.5rem; padding-top: 1.5rem; border-top: 1px solid #f2f2f2; }
			.sort-label { font-size: 0.75rem; font-weight: 800; color: #b2bec3; text-transform: uppercase; letter-spacing: 0.1em; }
			.sort-options { display: flex; gap: 1rem; }
			.sort-btn { border: none; background: transparent; padding: 4px 8px; font-size: 0.85rem; font-weight: 700; color: var(--text-sub); cursor: pointer; }
			.sort-btn.active { color: var(--accent); }

			ul { display: grid; grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); gap: 2.5rem; list-style-type: none; padding: 0; }

			.post-item {
				background: #ffffff;
				border-radius: 24px;
				border: 1px solid var(--card-border);
				overflow: hidden;
				transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
				display: flex;
			}

			.post-item a {
				display: block;
				text-decoration: none;
				color: inherit;
				width: 100%;
			}

			/* 修正：border-colorの変更を削除し、浮き上がりと影のみを維持 */
			.post-item:hover {
				transform: translateY(-6px);
				box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
			}
			
			.hero-image {
				width: 100%;
				height: 200px;
				object-fit: cover;
				border-bottom: 1px solid var(--card-border);
				transition: opacity 0.3s ease;
			}

			.post-item:hover .hero-image {
				opacity: 0.9;
			}

			.post-content {
				padding: 1.2rem;
			}

			.title {
				margin: 0 0 0.8rem 0;
				color: var(--text-main);
				line-height: 1.4;
				font-size: 1.25rem;
				font-weight: 800;
				transition: color 0.3s ease;
			}

			/* 修正：タイトルの色がホバーで変わる設定を削除 */
			
			.post-meta {
				display: flex;
				align-items: center;
				justify-content: space-between;
				margin-top: 1rem;
				color: var(--text-sub);
			}

			.date { margin: 0 !important; font-size: 0.8rem; font-family: 'SF Mono', monospace; }

			.like-badge {
				display: flex;
				align-items: center;
				gap: 4px;
			}

			.mini-heart-icon {
				width: 14px;
				height: 14px;
				fill: none;
				stroke: #b2bec3;
				stroke-width: 2.5px;
				transition: all 0.3s ease;
			}

			.like-count-num {
				font-family: 'SF Mono', monospace;
				font-size: 0.85rem;
				font-weight: 500;
				color: #86868b;
				font-variant-numeric: tabular-nums;
			}

			.post-item:hover .mini-heart-icon {
				stroke: var(--accent);
				transform: scale(1.1);
			}
			.post-item:hover .like-count-num {
				color: var(--accent);
			}

			@media (max-width: 768px) {
				.blog-dashboard { padding: 1.5rem; }
				.sort-section { gap: 1rem; flex-direction: column; }
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="blog-dashboard">
				<nav class="category-nav">
					<a href="/blog/" class="cat-link active">All Posts</a>
					{CATEGORIES.map((cat) => (
						<a href={`/blog/${cat.slug}`} class="cat-link">{cat.label}</a>
					))}
				</nav>
				<div class="search-container"> <Search /> </div>
				<div class="sort-section">
					<span class="sort-label">Order By</span>
					<div class="sort-options" id="sort-group">
						<button class="sort-btn active" data-sort="date-desc">Newest</button>
						<button class="sort-btn" data-sort="date-asc">Oldest</button>
						<button class="sort-btn" data-sort="likes-desc">Popular</button>
					</div>
				</div>
			</div>

			<ul id="post-list">
				{postsWithLikes.map((post) => (
					<li class="post-item" data-date={post.data.pubDate.valueOf()} data-likes={post.likeCount}>
						<a href={`/blog/${post.id}/`}>
							{post.data.heroImage && ( 
								<Image width={720} height={400} src={post.data.heroImage} alt="" class="hero-image" /> 
							)}
							<div class="post-content">
								<h4 class="title">{post.data.title}</h4>
								<div class="post-meta">
									<p class="date"> <FormattedDate date={post.data.pubDate} /> </p>
									<div class="like-badge">
										<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="mini-heart-icon">
											<path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
										</svg>
										<span class="like-count-num">{post.likeCount}</span>
									</div>
								</div>
							</div>
						</a>
					</li>
				))}
			</ul>
		</main>
		<Footer />

		<script is:inline define:vars={{ supabaseUrl, supabaseKey }}>
			const sortGroup = document.getElementById('sort-group');
			const buttons = sortGroup.querySelectorAll('.sort-btn');
			const list = document.getElementById('post-list');
			const items = Array.from(list.getElementsByClassName('post-item'));

			buttons.forEach(btn => {
				btn.addEventListener('click', () => {
					buttons.forEach(b => b.classList.remove('active'));
					btn.classList.add('active');
					const val = btn.dataset.sort;
					items.sort((a, b) => {
						if (val === 'date-desc') return parseInt(b.dataset.date) - parseInt(a.dataset.date);
						if (val === 'date-asc') return parseInt(a.dataset.date) - parseInt(b.dataset.date);
						if (val === 'likes-desc') return parseInt(b.dataset.likes) - parseInt(a.dataset.likes);
						return 0;
					});
					items.forEach(item => list.appendChild(item));
				});
			});

			async function refreshLikes() {
				try {
					const res = await fetch(`${supabaseUrl}/rest/v1/post_likes?select=slug,count`, {
						headers: { 'apikey': supabaseKey, 'Authorization': `Bearer ${supabaseKey}` }
					});
					const latestData = await res.json();
					items.forEach(item => {
						const link = item.querySelector('a');
						if (!link) return;
						const path = new URL(link.href).pathname;
						const match = latestData.find(l => l.slug === path);
						if (match) {
							const countElem = item.querySelector('.like-count-num');
							if (countElem) {
								countElem.innerText = match.count;
								item.dataset.likes = match.count;
							}
						}
					});
				} catch (e) { console.error(e); }
			}
			refreshLikes();
		</script>
	</body>
</html>