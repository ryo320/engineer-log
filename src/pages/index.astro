			.tagline span { color: var(--text-main); font-weight: 600; border-bottom: 2px solid rgba(9, 132, 227, 0.3); }
			
			.section-title { font-size: 1.8rem; margin-bottom: 2rem; color: var(--text-main); font-weight: 700; }
