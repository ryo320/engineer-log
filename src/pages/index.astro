		<script is:inline>
			const topicCards = document.querySelectorAll('.topic-card');
			let isHovering = false;

			function updateFocus() {
				if (isHovering) return;

				const vh = window.innerHeight;
				const scrollY = window.scrollY;

				if (scrollY < 30) {
					topicCards.forEach(card => card.classList.remove('focused'));
					return;
				}

				const vh_center = vh / 2;
				
				let closestCard = null;
				let minDistance = Infinity;

				topicCards.forEach((card) => {
					const rect = card.getBoundingClientRect();
					const cardCenter = rect.top + rect.height / 2;
					const index = parseInt(card.dataset.index);

					const offset = (index === 99) ? 0 : (index * 40);
					const targetY = vh_center - offset; 
					const distance = Math.abs(cardCenter - targetY);

					if (distance < minDistance) {
						minDistance = distance;
						closestCard = card;
					}
				});

				topicCards.forEach(card => {
					if (card === closestCard && minDistance < vh * 0.35) {
						card.classList.add('focused');
					} else {
						card.classList.remove('focused');
					}
				});
			}

			topicCards.forEach(card => {
				card.addEventListener('mouseenter', () => {
					isHovering = true;
					topicCards.forEach(c => c.classList.remove('focused'));
				});
				card.addEventListener('mouseleave', () => {
					isHovering = false;
					updateFocus();
				});
			});

			let ticking = false;
			window.addEventListener('scroll', () => {
				if (!ticking) {
					window.requestAnimationFrame(() => {
						updateFocus();
						ticking = false;
					});
					ticking = true;
				}
			}, { passive: true });
			
			updateFocus();
		</script>

